<?xml version="1.0" encoding="UTF-8" ?>

<templates>
    <t t-name="ui_playground.props" owl="1">
        <div class="table-responsive o_ui_playground_bottom_bar">
            <table class="table table-sm table-hover table-striped">
                <thead>
                    <tr>
                    <th scope="col">Props Name</th>
                    <th scope="col">Type</th>
                    <th scope="col">Value</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="storyProps" t-as="props" t-key="props">
                        <tr>
                            <td>
                                <t t-call="ui_playground.props.name"/>
                            </td>
                            <td t-esc="props_value.type.name"/>
                            <td>
                                <t t-call="ui_playground.props.input"/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </div>
    </t>

    <t t-name="ui_playground.props.input" owl="1">
        <t t-if="props_value.type.name === 'Boolean'">
            <input t-att-disabled="!props_value.dynamic" class="o_input" t-att-checked="props_value.value" type="checkbox" t-model="props_value.value"/>
        </t>
        <t t-elif="props_value.type.name === 'String'">
            <input t-att-disabled="!props_value.dynamic" class="o_input o_outline" t-att-value="props_value.value" t-model="props_value.value"/>
        </t>
        <t t-else="">
            <input t-att-disabled="1" class="o_input" value="wip?"/>
        </t>
    </t>

    <t t-name="ui_playground.props.name" owl="1">
        <t t-esc="props"/>
        <i class="fa fa-question-circle-o ps-2 ui_playground_tooltip" t-if="props_value.help"
           data-tooltip-template="ui_playground.props.tooltip" t-att-data-tooltip-info="tooltipInfo"/>
    </t>

    <t t-name="ui_playground.props.tooltip" owl="1">
        <div class="o-tooltip px-2 py-1">
            <p t-out="help"/>
        </div>
    </t>
</templates>
