<odoo>
    <data>
        <record id="ui_playground_open" model="ir.actions.client">
            <field name="name">UI Playground</field>
            <field name="tag">ui_playground_view</field>
            <field name="target">main</field>
        </record>

        <template id="ui_playground.ui_playground" name="ui_playground">

            <t t-call="web.layout">
                <t t-set="html_data" t-value="{'style': 'height: 100%;'}"/>
                <t t-set="title">UI Playground</t>
                <t t-set="head">
                    <t t-call-assets="web.assets_common" t-js="false"/>
                    <t t-call-assets="ui_playground.assets_backend" t-js="false"/>
                    <t t-call-assets="web.assets_common" t-css="false"/>
                    <t t-call-assets="ui_playground.assets_backend" t-css="false"/>
                    <t t-call-assets="ui_playground.tour" t-if="'tests' in debug or test_mode_enabled" defer_load="True"/>
                </t>
            </t>
        </template>
    </data>
</odoo>
