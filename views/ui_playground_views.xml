<odoo>
    <data>
        <record id="ui_playground_open" model="ir.actions.act_url">
            <field name="name">UI Playground</field>
            <field name="url">ui_playground</field>
            <field name="target">self</field>
        </record>

        <template id="ui_playground.ui_playground" name="Storybook">
            <t t-call="web.layout">
                <t t-set="html_data" t-value="{'style': 'height: 100%;'}"/>
                <t t-set="title">UI Playground</t>
                <t t-set="head">
                    <t t-call-assets="web.assets_common" t-js="false"/>
                    <t t-call-assets="ui_playground.assets_backend" t-js="false"/>
                    <t t-call-assets="web.assets_common" t-css="false"/>
                    <t t-call-assets="ui_playground.assets_backend" t-css="false"/>
                </t>
            </t>
        </template>
    </data>
</odoo>
